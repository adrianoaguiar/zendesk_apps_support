(function() {
  <% @apps.each do |app| %>
    <%= app.assets.js(I18n.locale).html_safe %>
  <% end %>

  <% @installations.each do |installation| %>
    ZendeskApps[<%= installation.app.name.to_json.html_safe %>].install(<%= InstallationSerializer.new( installation, includes: [:requirements] ).to_json.html_safe %>);
  <% end %>

  <% @installation_orders.each do |loc_name, installation_list| %>
    ZendeskApps.sortAppsForSite('<%= loc_name %>', <%= installation_list %>);
  <% end %>
}());

ZendeskApps.trigger && ZendeskApps.trigger('ready');
